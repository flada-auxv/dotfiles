class WorksController < ApplicationController
  # /users/:id/works
  def index
    if user = current_user 
      @work = user.works
    else
      redirect_to :new_user_session
    end
  end

  # /users/:id/works/new
  def new
    @user = current_user
    @work = @user.works.build
  end

  # /users/:id/works/
  def create
  end

end
