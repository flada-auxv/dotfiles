<%= form_for @work, url: { action: "create" } do |f| %>
<div>
  <%= f.label :date, '日' %><br />
  <%= f.date_select :date, use_month_numbers: true %>
</div>
<%= field_set_tag '常駐' do %>
<%= fields_for @work.build_outside do |wf| %>
<div>
  <!-- TODO 既に入力されているものがサジェストされるようにしたい -->  
  <%= wf.label :shift, 'シフトパターン' %><br />
  <%= wf.text_field :shift %>
</div>
<div>
  <%= wf.label :holiday, '休暇種別' %><br />
  <%= wf.select(:holiday, { '公休' => 1, '振休' => 2, '有休' => 3, '欠勤' => 4,  '半有' => 5,  '半振' => 6,  '半欠' => 7, '明休' => 8, '他' => 9 }, { include_blank: "" }) %>
</div>
<div>
  <%= wf.label :op, '始業' %><br />
  <%= wf.time_select :op, default: this_year_at("09:30") %>
</div>
<div>
  <%= wf.label :ed, '終業' %><br />
  <%= wf.time_select :ed, default: this_year_at("18:30") %>
</div>
<div>
  <%= wf.label :rest_normal, '休憩(1)' %><br />
  <%= wf.time_select :rest_normal, default: this_year_at("01:00") %>
</div>
<div>
  <%= wf.label :rest_overtime, '休憩(2)' %><br />
  <%= wf.time_select :rest_overtime, default: this_year_at("00:00") %>
</div>
<div>
  <%= wf.label :rest_late_night, '休憩(深夜)' %><br />
  <%= wf.time_select :rest_late_night, default: this_year_at("00:00") %>
</div>
<div>
  <%= wf.label :note, '備考' %><br />
  <%= wf.text_area :note, { cols: 80, rows: 5 } %>
</div>
<% end %>
<% end %>
<div>
  <%= f.label :delay, '電車遅延' %><br />
  <%= f.select(:delay, { "有" => true, "無" => false }, { include_blank: "" }) %>
</div>
<%= f.submit '登録' %>
<% end %>
